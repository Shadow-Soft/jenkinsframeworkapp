	<parent>
		<groupId>com.securepaas.demo</groupId>
		<artifactId>demo-apps</artifactId>
		<version>0.8-SNAPSHOT</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<artifactId>SimpleServiceProvider</artifactId>
	<packaging>war</packaging>
	<name>Simple Service Provider</name>

	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>spsource</artifactId>
		</dependency>
	</dependencies>
	
	<build>
	    <plugins>
	      <plugin>
	        <groupId>org.apache.maven.plugins</groupId>
	        <artifactId>maven-war-plugin</artifactId>
	        <version>2.5</version>
	        <configuration>
	          <archive>
	             <manifestEntries>
	                <Dependencies>javax.ws.rs.api</Dependencies>
	             </manifestEntries>
	          </archive>
	        </configuration>
	      </plugin>
	    </plugins>
	</build>
</project>
